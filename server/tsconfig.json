{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "src",
        "types"
    ]
}